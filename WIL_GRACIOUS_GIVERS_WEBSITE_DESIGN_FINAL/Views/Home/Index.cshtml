    <script>

        //Scroll Effect
        const sr = ScrollReveal({
            distance: '65px',
            duration: 2000,
            reset: false
        });

        sr.reveal('section', { delay: 200, origin: 'top' });


        //After Reveal
        function myCallback(el) {
            el.classList.remove('is-animating');
            el.classList.add('is-visible');
        }

        ScrollReveal().reveal('section', { afterReveal: myCallback });


    </script>
