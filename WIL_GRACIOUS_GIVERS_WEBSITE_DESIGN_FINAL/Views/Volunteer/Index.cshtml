        /* Radio Button Design */
        /* Hide round disc part of radio button */
        input[type=radio] {
            display: none;
            margin: 10px;
        }

            /* Change the radio button label design
                Add margin, padding, colour */
            input[type=radio] + label {
                display: inline-block;
                margin: 5px;
                padding: 4px 12px;
                background-color: #09a7d4;
                color: #f7fffa;
                border-radius: 8px;
            }

            /* Change background and label color for label when selected */
            input[type=radio]:checked + label {
                background-image: none;
                background-color: #f7fffa;
                color: #09a7d4;
                border-radius: 8px;
            }


        /*Button*/
        .submit-button {
            display: inline-block;
            margin: 5px;
            padding: 4px 12px;
            background-color: #068fc6;
            color: #f7fffa;
            border-color: transparent;
            border-radius: 8px;
        }

            /* Change styles on hover */
            .submit-button:hover {
                background-color: #f7fffa;
                color: #09a7d4;
            }
    </style>

</head>

